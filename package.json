{
  "name": "luckinhappykami",
  "version": "1.0.0",
  "description": "LuckinHappy卡密验证系统 - TypeScript重构版",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:client": "cd frontend && npm run dev",
    "build": "npm run build:client && npm run build:server && mkdir -p dist/public && cp -r frontend/dist/* dist/public/",
    "build:server": "tsc",
    "build:client": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "init-db": "ts-node src/database/init.ts",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "card",
    "verification",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "xiaoxiaoguai",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "frontend": {
    "dependencies": {
      "vue": "^3.3.8",
      "element-plus": "^2.4.1",
      "@element-plus/icons-vue": "^2.1.0",
      "vue-router": "^4.2.5",
      "pinia": "^2.1.7",
      "axios": "^1.6.0"
    },
    "devDependencies": {
      "@vitejs/plugin-vue": "^4.5.0",
      "vite": "^4.5.0",
      "typescript": "^5.2.2",
      "vue-tsc": "^1.8.19",
      "@types/node": "^20.8.10"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
